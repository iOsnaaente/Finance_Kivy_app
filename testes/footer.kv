        MDRectangleFlatIconButton:
            size_hint: 1, 1 
            pos_hint: {'center_x': .5, 'center_y' : .5}
            text: 'Extrato'
            icons: 'plus'
            theme_text_color: "Custom"
            theme_icon_color: "Custom"
            text_colo:  [0,0,0,0]
            line_color: [0,0,0,0]
