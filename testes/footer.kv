MDScreen:
    MDFloatLayout:
        id: header 
        size_hint: 1, 0.2
        pos_hint: {"center_x": .5, "center_y": 0.9}
    MDBoxLayout:
        id: body
        size_hint: 0.95, 0.6
        pos_hint: {"center_x": .5, "center_y": .5}
        orientation: 'vertical'
        spacing: '10dp'
        md_bg_color: 'white'
    Footer:

